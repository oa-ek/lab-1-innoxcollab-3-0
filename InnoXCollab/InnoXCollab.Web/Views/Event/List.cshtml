@model List<InnoXCollab.Web.Models.Domain.Event>
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
	<div class="container">
		<h1>Show all events - Admin functionality</h1>
	</div>
</div>

<div class="container py-5">
	<table class="table">
		<thead>
			<tr>
				<td>Id</td>
				<td>Heading</td>
				<td>Tags</td>
				<td> </td>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr class="align-content-center">
					<td>@item.Id</td>
					<td>@item.Name</td>
					<td>
						<div class="d-flex">
							@foreach (var tag in item.Tags)
							{
								<span class="badge bg-secondary me-1">@tag.Name</span>
							}
						</div>
					</td>
					<td>
						<a class="btn btn-dark"
						   asp-area=""
						   asp-controller="Event"
						   asp-action="Edit"
						   asp-route-id="@item.Id">Edit</a>
					</td>
					<td></td>
				</tr>

			}
		</tbody>
	</table>
</div>