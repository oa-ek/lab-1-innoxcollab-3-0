@model List<InnoXCollab.Web.Models.Domain.Tag>
@{
}


<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>List of tags</h1>
    </div>
</div>

<div class="container py-5">
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Events</th>
				<th> </th>
			</tr>
		</thead>
		<tbody>
			@foreach (var tag in Model)
			{
				<tr>
					<td>@tag.Id</td>
					<td>@tag.Name</td>
					<td>
						@foreach(var Event in tag.Events)
						{
							<span class="badge bg-secondary me-1">@Event.Name</span>
						}
					</td>

					<td>
						<a class="btn btn-dark" asp-area=""
						asp-controller="Tag"
						asp-action="Edit"
						asp-route-id="@tag.Id">
							Edit
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>